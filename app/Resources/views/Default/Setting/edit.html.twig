{% extends ':Default:base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block header %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        #content {
            padding-top: 60px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('input[type="number"]').number();
        });
    </script>
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'setting.title'|trans }}</h1>
    </div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-success pull-right">{{ 'setting.save'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}
